@model List<Chef>

<h1>Chefs &nbsp; | &nbsp; <a href="/all/dishes">Dishes</a> &nbsp; | &nbsp; <a href="/new/chef">Add Chef</a></h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th># of Dishes</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Chef chef in Model)
        {
            <tr>
                <td>@chef.FullName()</td>
                <td>@chef.Age()</td>
                <td>@chef.AllDishes.Count()</td>
            </tr>
        }
        
    </tbody>
</table>

