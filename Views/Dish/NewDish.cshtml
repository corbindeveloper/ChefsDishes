@model Dish

<form class="shadow p-3 rounded" asp-controller="Dish" asp-action="CreateDish" method="POST">

    <div class="mb-3">
      <label asp-for="DishName"></label>
      <span asp-validation-for="DishName" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="DishName">
    </div>

    <div class="mb-3">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Calories">
    </div>

    <div class="mb-3">
      <label asp-for="Tastiness"></label>
      <span asp-validation-for="Tastiness" class="text-danger font-weight-bold">
      </span>
      <select asp-for="Tastiness" type="number">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>

    <div class="mb-3">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Description" type="text">
    </div>

    <div class="mb-3">
      <label asp-for="ChefId"></label>
      <span asp-validation-for="ChefId" class="text-danger font-weight-bold">
      </span>
      <select asp-for="ChefId">
        @foreach (var chef in @ViewBag.ListAllChefs)
        {
            <option value="@chef.ChefId">@chef.FullName()</option>
        }
      </select>
    </div>

    <button>Submit</button>

</form>